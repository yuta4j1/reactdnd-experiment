{
    "compilerOptions": {
        "allowJs": true,
        "alwaysStrict": true,
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "lib": [
            "dom",
            "ES2020"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true,
        "target": "es2020",
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "**/*.tsx", "stories/app.stories.ts",
    ]
}